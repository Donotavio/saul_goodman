{
  "manifest_version": 3,
  "name": "__MSG_extName__",
  "description": "__MSG_extDescription__",
  "version": "1.0.1",
  "default_locale": "en_US",
  "icons": {
    "16": "src/img/logotipo_saul_goodman.ico",
    "32": "src/img/logotipo_saul_goodman.png",
    "48": "src/img/logotipo_saul_goodman.png",
    "128": "src/img/logotipo_saul_goodman.png"
  },
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "__MSG_actionTitle__",
    "default_icon": {
      "16": "src/img/logotipo_saul_goodman.ico",
      "32": "src/img/logotipo_saul_goodman.png"
    }
  },
  "options_page": "src/options/options.html",
  "background": {
    "service_worker": "dist/background/index.js",
    "type": "module"
  },
  "permissions": [
    "storage",
    "tabs",
    "alarms",
    "activeTab",
    "idle",
    "windows",
    "webNavigation",
    "tabGroups",
    "sessions"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "src/shared/critical-siren.js",
        "dist/content/activity-listener.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "src/img/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}
