{
  "name": "saul-goodman-extension",
  "version": "1.21.10",
  "private": true,
  "type": "module",
  "scripts": {
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "build": "tsc -p tsconfig.json",
    "watch": "tsc -w -p tsconfig.json",
    "test": "npm run build && TEST_FILES=$(find dist/tests -name '*.test.js' -o -name '*.spec.js') && if [ -z \"$TEST_FILES\" ]; then echo 'No compiled tests found'; exit 0; fi && node --test $TEST_FILES",
    "package:webstore": "node tools/package-webstore.js",
    "blog:index": "node tools/content_engine/build-index.js",
    "content:engine": "node tools/content_engine/main.js",
    "content:engine:dry-run": "node tools/content_engine/main.js --dry-run",
    "i18n:sync": "node tools/i18n/sync-site-locales.js",
    "i18n:check": "node tools/i18n/check-missing-keys.js",
    "i18n:stubs": "node tools/i18n/generate-locale-stubs.js",
    "i18n:copy-site": "node tools/i18n/copy-locales-to-site.js",
    "i18n:repair-locale": "node tools/i18n/repair-locale-with-llm.js",
    "mcp:sync-harness": "tsx tools/mcp_quality/sync-harness.ts",
    "mcp:quality": "npm run build && tsx tools/mcp_quality/run.ts",
    "mcp:quality:update-baseline": "npm run mcp:quality -- --update-baseline"
  },
  "devDependencies": {
    "@modelcontextprotocol/sdk": "^1.25.2",
    "@types/chrome": "^0.0.246",
    "@types/node": "^20.11.30",
    "tsx": "^4.21.0",
    "typescript": "^5.4.0"
  },
  "dependencies": {
    "chart.js": "^4.5.1",
    "jspdf": "^4.0.0"
  }
}
